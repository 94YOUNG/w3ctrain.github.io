extends ./_utils/layout.jade
block content
  a(class='right-20' href="https://github.com/w3ctrain/w3ctrain.github.io" id='fork-me-on-github')
    img(style="position: absolute; top: 0; right: 15px; border: 0; z-index: 2; width: 160px;" src="img/forkme.png" alt="Fork me on GitHub")

  article.fullheight
      .hamburger-wrapper#open-sidebar
          div.hamburger-arrow
            .before
            .after
        aside.sidebar#sidebar
          //img(src="img/favicon.jpg")
          div.clearfix#sticker
            div.sidebar-content
              nav
                ul.sidebar__nav#sidebar-nav
                  each val, index in navItems
                    if index == "tool"
                      li.active(id='navitem-' + index)
                        a(href="")= val
                    else 
                      li(id='navitem-' + index)
                        a(href="")= val
      div(class="main-content clearfix" id="main-content")
        div
          article.article
            section.section
              include ./_partial/tools.jade
            section.section
              include ./_partial/blog.jade
            section.section
              include ./_partial/plugins.jade
            section.section
              include ./_partial/public.jade
            section.section
              include ./_partial/frame.jade
            section.section
              include ./_partial/books.jade
            section.section
              include ./_partial/design.jade
            section.section
              include ./_partial/other.jade
          
          // 多说开始
          div(class="ds-thread" data-thread-key="2015/11/08/font-end-favorite/" data-title="前端收藏夹" data-url="http://w3ctrain.com/2015/11/08/font-end-favorite/" data-author-key="1" id="ds-thread")
      
