extends ./_utils/layout.jade
block content
  a(class='right-20' href="https://github.com/w3ctrain/w3ctrain.github.io" id='fork-me-on-github')
    img(style="position: absolute; top: 0; right: 15px; border: 0; z-index: 1; width: 160px;" src="img/forkme.png" alt="Fork me on GitHub")

  article.fullheight.w3ctrain
      .hamburger-wrapper#open-sidebar
          div.hamburger-arrow
            .before
            .after
      aside.sidebar#sidebar
        div.clearfix#sticker
          div.sidebar-content
            nav
              div.sidebar__header.sidebar__item
                a(href="/")
                  img(class="sidebar__header-logo" src="img/fs-tags.png" title="前端收藏夹")
                  h1(class="sidebar__header-title") 前端收藏夹
              ul.sidebar__nav#sidebar-nav
                each val, index in navItems
                  if index == "tool"
                    li.active(id='navitem-' + index)
                      a(href="")= val
                  else 
                    li(id='navitem-' + index)
                      a(href="")= val
              div.author-meta.text-center
                div.flipper
                  a(href="http://weibo.com/joueu"  title="Hello! 我是周晓楷")
                    img(src="img/avatar.png" class="avatar front")
                    img(src="img/helkyle.jpg" alt="我是周晓楷" class="avatar back")
                br
                p.author-desc 我是周晓楷，华南师范大学大四学生，你可以通过下列方式找到我。
                button(class="btn btn-outline__radius hover-me" href="http://weibo.com/joueu") Hover Me!
                ul.icon-wrapper.text-center.animated
                  li
                    a.icon.codepen(title="codepen" href="http://codepen.io/HelKyle/" target="_blank")
                  li
                    a.icon.weibo(title="微博" href="http://weibo.com/joueu" target="_blank")
                  li
                    a.icon.github(title="github" href="https://github.com/helkyle" target="_blank")
              p 本站点用于收集前端工具，收录优秀文章，欢迎补充！
              div
                iframe(src="https://ghbtns.com/github-btn.html?user=w3ctrain&repo=w3ctrain.github.io&type=star&count=true" frameborder="0" scrolling="0"  height="20px" style='display:inline-block')
                iframe(src="https://ghbtns.com/github-btn.html?user=w3ctrain&repo=w3ctrain.github.io&type=fork&count=true" frameborder="0" scrolling="0"  height="20px" style='display:inline-block')
              br
      div(class="main-content clearfix" id="main-content")
        div
          article.article
            section.section
              include ./_partial/tools.jade
            section.section
              include ./_partial/blog.jade
            section.section
              include ./_partial/plugins.jade
            section.section
              include ./_partial/public.jade
            section.section
              include ./_partial/frame.jade
            section.section
              include ./_partial/design.jade
            section.section
              include ./_partial/other.jade
          
          // 多说开始
          div(class="ds-thread" data-thread-key="2015/11/08/font-end-favorite/" data-title="前端收藏夹" data-url="http://w3ctrain.com/2015/11/08/font-end-favorite/" data-author-key="1" id="ds-thread")

  <!-- build:js js/main.min.js -->
  script(src="js/jquery-2.1.3.min.js" type="text/javascript" charset="utf-8")
  script(src="js/jquery.tooltipster.min.js" type="text/javascript" charset="utf-8")  
  script(src="js/main.js" type="text/javascript" charset="utf-8")  
  <!-- endbuild -->

  
  
