  script(src="js/jquery-2.1.3.min.js" type="text/javascript" charset="utf-8")
  script(src="js/jquery.tooltipster.min.js" type="text/javascript" charset="utf-8")  
  script(src="js/main.js" type="text/javascript" charset="utf-8")  
